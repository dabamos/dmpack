@freebsd-build
option build --profile release --flag "-D__FreeBSD__ -I/usr/local/include -ffree-line-length-0"

@freebsd-install
option install --profile release --flag "-D__FreeBSD__ -I/usr/local/include -ffree-line-length-0"

@freebsd-run
option run --profile release --flag "-D__FreeBSD__ -I/usr/local/include -ffree-line-length-0"

@freebsd-test
option test --profile release --flag "-D__FreeBSD__ -I/usr/local/include -ffree-line-length-0"

@linux-aarch64-build
option build --profile release --flag "-D__linux__ -D__aarch64__ `pkg-config --cflags hdf5` -ffree-line-length-0"

@linux-aarch64-install
option install --profile release --flag "-D__linux__ -D__aarch64__ `pkg-config --cflags hdf5` -ffree-line-length-0"

